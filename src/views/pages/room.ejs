<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %> 
    <title>Document</title>
</head>
<body>
    <main id="room">
        <article>
            <section>
                <a href="/" id="leave">Leave game</a>
                <div id="moviePoster"></div>
            </section>
        </article>
        <article>
            <section>
                <h2>Leaderboard</h2>
                <ul id="userList"></ul>
            </section>
            <section>
                <h2>Chat</h2>
                <ul id="chatBox"></ul>
                <form action="" id="chatForm">
                    <input type="text" name="message" id="message" autocomplete="off">
                    <button id="sendMessage">Send</button>
                </form>
            </section>
        </article>
        <article id="queue">
            <section>
                <h2>Joined users</h2>
                <ul id="joined"></ul>
                <h3 id="userNeed"></h3>
            </section>
        </article> 
    </main>
</body>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/script.js"></script>
</html>